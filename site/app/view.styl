.view
  margin        8em 2em 4em 2em

  a.btnEdit
  a.btnNew
    width         4em
  a.btn
  button
    .fa:before
      margin-left   0.5em
  button
    margin-right  1em
  button.pull-right
    margin-left   1em
    margin-right  0
  legend
    border-bottom none
    a.btn
      margin-top    10px
  li
    line-height   2em

  .edge-title
    .aNode
    .bNode
    .how
      margin-right  0.3em

  .fa-exclamation
    color         red

  .glyph
    margin-right  0.5em
  .glyph.dead
    color         red
  .glyphs
    margin-left   0.5em

  .map-edit
    left          300px
    top           100px
    position      fixed

    .btn.cancel
      visibility    hidden
    .btn.delete
      float         left
    .well
      background-color  rgba(255, 255, 255, 0.75)

  .section
    border-top    1px solid #ddd
    margin-top    40px

.view.editing
  a.btnEdit
  a.btnNew
    display       none
