body
  font-family "Helvetica Neue", Helvetica, Arial, sans-serif

h1
  font-size   38.5px
  margin      10px 0
  line-height 40px

a
  color           #08c
  text-decoration none

.container
  width        940px
  margin-right auto
  margin-left  auto

.hide-during-boot
  display      none

.pull-left
  float        left

.seo-link
  display      none

.spinner
  position     fixed
  top          50%
  left         50%
  margin-right -50%
  transform    translate(-50%, -50%)
