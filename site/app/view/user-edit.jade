include ../lib/_form

form.form-horizontal.well
  legend
    span.create Signup
    span.update Edit
  fieldset
    span.authtype-password
      +field-text('handle', 'Username')
      +field-password('password', 'Password', 'Unchanged')
      +field-password('passconf', 'Confirm Password', 'Unchanged')
    +field-text('email', 'Email')
      span.help-block
        | Purely for user verification and password reset
        | (encrypted in the db and never disclosed).
    span.input-xxlarge
      +field-text('info', 'Homepage')
    .signed-in-admin
      +field-text('quota_daily', 'Daily Quota')
  +button-bar
