include ../../lib/_form

form.map.signed-in.form-horizontal.well
  legend
    i.glyph.fa.fa-caret-right.show-if-collapsed
    i.glyph.fa.fa-caret-down.show-if-expanded
    span.create Create Map
    span.update Edit Map
  .body.show-if-expanded
    .alert.alert-error
    fieldset
      span.input-xlarge
        +field-text('name', 'Name', 'Enter a name for the map')
      +field-select('nodes', 'Actors')
        .help-block.v-gap Drag actors around the map to improve the layout.
        .help-block.v-gap Click a pin
          i.glyph.fa.fa-thumb-tack
          | to fix or free an actor's position.
      span.input-xlarge
        +field-textarea('description', 'Description')
      span.signed-in-admin
        +field-checkbox('is-default', 'Default')
    +button-bar
