.graph
  marker
    fill              #aaa
  .edge
    stroke            #aaa
    stroke-width      1.5px
    &:not(.rename)
      &.family
        stroke-dasharray  2
        stroke-width      5px
      &.out-of-date:not(.rename)
        &.family
          opacity           0.5
        &:not(.family)
          opacity           0.75
          stroke-dasharray  5
    &.rename
      stroke            #ccc
      stroke-width      10px
      &.out-of-date
        opacity           0.5
    &.you
      display           none
  .edge-glyphs
    text
      fill            #08c
      &.href-archive
        fill            #0aa
      &.href-live
        fill            #0a0
