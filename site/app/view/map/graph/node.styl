.graph
  .node
    a
      fill          #08c
    a:hover
      fill          #058
    circle
      fill          #ccc
    rect
      fill          none
      stroke-width  1
      stroke        #ccc
    .fe
      fill          #888
    .old-name
      text-decoration line-through
    &.boss
      text
        font-size     18px
    &.dead
      a
        text-decoration line-through
      .fe
        opacity       0.5
    &.you
      circle
        fill          none
        stroke-width  3
        stroke        #aaa
      text
        font-size     16px
